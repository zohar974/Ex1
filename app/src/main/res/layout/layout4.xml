<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent" android:background="#00a7bd">
    <AnalogClock
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_gravity="center|top"/>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="My Clock"
        android:layout_gravity="center|top"
        android:layout_marginTop="95dp"
        android:textColor="#fff"/>

    <TextView
        android:id="@+id/textView13"
        android:layout_width="125dp"
        android:layout_height="75dp"
        android:text=""
        android:background="@drawable/border3"
        android:layout_gravity="center"
        />

    <TextView
        android:id="@+id/textView14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="This activity demonstrates the use of Frame Layout with multipule views on top on each other"
        android:textColor="#fff"
        android:layout_gravity="center"
        android:layout_marginLeft="5dp"/>

</FrameLayout>

